# Database Backup Configuration
# Copy this file to .env and adjust values as needed

# Backup Schedule (Cron expressions)

BACKUP_SCHEDULE=0 2 * * *

# Cleanup Schedule (Cron expressions)
# Default: Weekly on Sunday at 3:00 AM
BACKUP_CLEANUP_SCHEDULE=0 3 * * 0

# Retention Settings
# Number of days to keep backup files (default: 30)
BACKUP_RETENTION_DAYS=30

# Maximum backup size in MB (default: 1024 = 1GB)
BACKUP_MAX_SIZE_MB=1024

# Feature Toggles
# Enable/disable backup functionality (default: true)
BACKUP_ENABLED=true

# Notification Settings
# Enable/disable notifications (default: true)
BACKUP_NOTIFICATIONS=true
# Notify on successful backups (default: true)
BACKUP_NOTIFY_SUCCESS=true
# Notify on failed backups (default: true)
BACKUP_NOTIFY_FAILURE=true

# Database Configuration (if not set in main .env)
# DATABASE_URL=postgresql://username:password@localhost:5432/signbank 