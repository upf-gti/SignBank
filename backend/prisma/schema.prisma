generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@db:5432/postgres?schema=public"
}


model Users {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  wordRequests WordRequest[]
}

model Words {
  id          Int       @id @default(autoincrement())
  word        String
  description String
  videoUrl    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model WordRequest {
  id          Int       @id @default(autoincrement())
  word        String
  description String
  videoUrl    String
  user        Users      @relation(fields: [userId], references: [id])
  userId      Int
  status      RequestStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum RequestStatus {
  PENDING
  ACCEPTED
  DENIED
}