# Database
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=signbank
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?connect_timeout=300

# Admin credentials
ADMIN_EMAIL=your_admin@example.com
ADMIN_PASSWORD=your_secure_admin_password

# Typesense
TYPESENSE_API_KEY=your_secure_api_key

# File Server
FILE_SERVER_PATH=/path/to/your/files

# Node Environment
NODE_ENV=production
PORT=80

# JWT (if you're using JWT authentication)
JWT_SECRET=your_secure_jwt_secret
JWT_EXPIRATION=24h

# Optional: Nginx/SSL
SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem